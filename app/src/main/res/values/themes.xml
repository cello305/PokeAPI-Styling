<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RandomPetsStarter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Using system-defined dark colors for primary and onPrimary -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>

        <!-- Ensuring contrast of text on secondary color -->
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Use the system-defined color for the status bar -->
        <item name="android:statusBarColor">@android:color/black</item>
    </style>
</resources>
